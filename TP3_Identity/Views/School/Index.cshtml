@model IEnumerable<TP3_Identity.Models.School>

@{
    ViewData["Title"] = "Index";
}

<h1>List  Of Schools</h1>

<p>
    <a asp-action="Create">
       <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><img src="~/images/addSC.png" style="height:24px; width:24px"/> Create New</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SchoolName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolAdress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolAdress)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SchoolID"><img src="~/images/editSc.png" style="height:30px; width:30px"/></a>|
                <a asp-action="Details" asp-route-id="@item.SchoolID"><img src="~/images/info.png" style="height:30px; width:30px"/></a>|
                <a asp-action="Delete" asp-route-id="@item.SchoolID"><img src="~/images/deleteSc.png" style="height:30px; width:30px"/></a>
            </td>
        </tr>
}
    </tbody>
</table>
